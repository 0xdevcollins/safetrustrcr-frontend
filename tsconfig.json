{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/@types","node_modules/@testing-library"],
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@store/*": ["src/store/*"],
      "@wallet/*": ["src/wallet/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", "lint-staged.config.js",
    "jest.config.js",
    "cypres/e2e/user-list.cy.js",
    "mocks/handlers.ts",
    "__test__/post-api-test.js",
    "example.test.js"
  ],
  "exclude": ["node_modules"]
}
